<% layout('/layouts/boilerplate') %>

<!-- Mapbox CSS -->
<link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet" />

<!-- Custom Map Style -->
<style>
  #map {
    width: 100%;
    height: 400px;
    border-radius: 10px;
    margin-top: 20px;
  }
</style>

<!-- Page Content -->
<div class="container mt-5">
  <!-- Listing Card -->
  <div class="card shadow p-3 rounded-4 mx-auto" style="max-width: 650px;">
    <div class="text-center">
      <img 
        src="<%= listing.image.url %>" 
        alt="<%= listing.title %>" 
        class="img-fluid rounded-4 mb-3"
        style="max-height: 390px; width: 500px;" />
    </div>

    <div class="card-body px-0">
      <h5 class="card-title fw-semibold"><%= listing.title %></h5>
      <p>Owner: 
        <i>
          <% if (listing.owner && listing.owner.username) { %>
            <%= listing.owner.username %>
          <% } else { %>
            Krushna Aware
          <% } %>
        </i>
      </p>

      <p class="card-text text-muted mt-3"><%= listing.description %></p>
      <p class="mb-1">â‚¹ <%= listing.price.toLocaleString('en-IN') %></p>
      <p class="mb-1"><%= listing.location %></p>
      <p><%= listing.country %></p>

      <% if (currentUser && listing.owner && currentUser._id.toString() === listing.owner._id.toString()) { %>
        <div class="d-flex gap-2 mt-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button type="submit" class="btn btn-dark">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>

  <% if (currentUser) { %>
    <!-- Review Form -->
    <div class="col-8 offset-2 mt-5 mb-4">
      <hr />
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" checked />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            placeholder="Write your review here..."
            required
          ></textarea>
          <div class="invalid-feedback">Please add a valid comment.</div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
  <% } %>

  <!-- All Reviews -->
  <div class="col-10 offset-1 mb-5">
    <hr class="my-4" />
    <h4 class="mb-4 fw-bold">All Reviews</h4>

    <% if (listing.reviews.length > 0) { %>
      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
              <div class="card-body">
                <h5 class="card-title fw-semibold">
                  <% if (review.author && review.author.username) { %>
                    @<%= review.author.username %>
                  <% } else { %>
                    Anonymous
                  <% } %>
                </h5>

                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <p class="card-text text-muted mb-2"><%= review.comment %></p>

                <% if (currentUser && review.author && currentUser._id.toString() === review.author._id.toString()) { %>
                  <form 
                    method="POST" 
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                    class="mt-3"
                  >
                    <button class="btn btn-sm btn-outline-danger">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <p class="text-muted fst-italic">No reviews yet. Be the first to review!</p>
    <% } %>
  </div>

  <!-- Map Section -->
  <div class="col-10 offset-1 mb-5">
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>
</div>

<!-- Map token and coordinates -->
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
 const listing = <%- JSON.stringify(listing) %>;
</script>

<!-- Mapbox JS -->
<script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
<script src="/js/map.js"></script>
